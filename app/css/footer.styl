@require 'globals/colors';

footer
    background-color: bg-color-footer;
    border: 1px solid border-color-footer;
    display: flex;
    justify-content: center;
    div
        padding: 15px;
    .footer-credits
        width: 66.66667%;
    .footer-copy
        width: 33.33333%;
        text-align: right;

@media (max-width: 767px)
    footer
        display: block;
        .footer-credits
            width: 100% !important;
            padding: 15px 15px 5px 15px;
        .footer-copy
            width: 100% !important;
            padding: 7px 15px 15px 15px;
            text-align: left;

@media (min-width: 768px)
    footer
        border-radius: 4px;
