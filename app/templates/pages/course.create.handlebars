<main>
    <form>
        <div class="form-group">
          <label for="course-name">Course Name</label>
          <input type="text" name="course-name" id="course-name" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="course-docent">Select Docents</label>
            <select name="course-docent" id="course-docent" class="form-control" multiple>
                {{#each docents}}
                    <option value="{{id}}">{{fullName}}</option>
                {{/each}}
            </select>
        </div>
        <button class="btn btn-success pull-right">Create</button>
    </form>    
</main>