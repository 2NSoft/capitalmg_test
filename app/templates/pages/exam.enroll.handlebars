<main>
    <form>
        <fieldset>
            <legend>Time Slots</legend>
            <div class="form-group">
                <select id="exam-enroll-timeslot" class="form-control">
                    {{#each timeSlots}}
                        <option value="{{@index}}" {{#unless @index}}selected{{/unless}}>{{name}}</option>
                    {{/each}}
                </select>
            </div>
        </fieldset>
        <fieldset>
            <legend>Available Students</legend>
            <div class="form-group">
                <select id="exam-enroll-available" class="form-control enroll-select" multiple>
                </select>
            </div>
            <button id="exam-enroll-btn-enroll" class="btn btn-success">Enroll</button>
        </fieldset>
        <fieldset>
            <legend>Enrolled Students</legend>
            <div class="form-group">
                <select id="exam-enroll-enrolled" class="form-control enroll-select" multiple>
                </select>
            </div>
            <button id="exam-enroll-btn-remove" class="btn btn-primary">Remove</button>
        </fieldset>
    </form>
</main>