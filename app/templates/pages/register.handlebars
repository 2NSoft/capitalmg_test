<main>
    <form>
        <h2>New User</h2>
        <div class="form-group">
            <label for="firstname">First Name</label>
            <input class="form-control" type="text" name="firstname" id="register-firstname" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label for="lastname">Last Name</label>
            <input class="form-control" type="text" name="lastname" id="register-lastname" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" type="text" name="username" id="register-username" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label for="email">E-mail</label>
            <input class="form-control" type="email" name="email" id="register-email" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" type="password" name="password" id="register-password" required>
        </div>
        <div class="form-group">
            <label for="repeat">Repeat Password</label>
            <input class="form-control" type="password" name="repeat" id="register-repeat" autocomplete="off" required>
        </div>
        <button class="btn btn-success pull-right" role="submit">Register</button>
    </form>
</main>