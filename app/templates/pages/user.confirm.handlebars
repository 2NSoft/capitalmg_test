<main>
    <form>
        <div class="form-group">
            <label for="user-select">Select User</label>
            <select name="user-select"
                id="user-select" class="form-control">
                    <option value="" selected></option>
                {{#each users}}
                    <option value="{{id}}">{{firstname}} {{lastname}}</option>
                {{/each}}
            </select>
        </div>
        <fieldset id="user-details" hidden>
            <div class="form-group">
                <label for="user-fullname">Full Name</label>
                <input name="user-fullname" id="user-fullname" class="form-control" disabled>
            </div>
            <div class="form-group">
                <label for="user-email">E-mail</label>
                <input name="user-email" id="user-email" class="form-control" type="email" disabled>
            </div>
            <div class="form-group">
                <label for="user-role">Select Role</label>
                <select name="user-role" id="user-role" class="form-control" required>
                    <option value="" selected></option>
                    {{#each roles}}
                        <option value="{{id}}">{{rolename}}</option>
                    {{/each}}
                    </select>   
            </div>
            <button class="btn btn-success pull-right">Confirm</button>
        </fieldset>
    </form>
</main>